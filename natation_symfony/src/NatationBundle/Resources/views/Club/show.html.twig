{% extends '@Natation/base.html.twig' %}

{% block title %}
    Natation synchronisée - Compétition
{% endblock %}

{% block app_body_title %}
    Club "{{ club.nom }}"
{% endblock %}

{% block app_body %}
    <table class="table table-hover">
        <tr>
            <th>Nom du club :</th>
            <td>{{ club.nom }}</td>
            {% if is_granted('ROLE_CREATE_COMPET') %}
            <td><a href="{{ path('set_club_name', {clubId: club.id}) }}" title="&Eacute;diter"><i class="fa fa-fw fa-edit"></i></a></td>
            {% endif %}
        </tr>
        <tr>
            <th>Dirigent du club</th>
            <td>{{ club.idDirigent.nom }} {{ club.idDirigent.prenom }}</td>
            {% if is_granted('ROLE_CREATE_COMPET') %}
            <td><a href="{{ path('set_club_president', {clubId: club.id}) }}" title="&Eacute;diter"><i class="fa fa-fw fa-edit"></i></a></td>
            {% endif %}
        </tr>
        <tr>
            <th>Nombre d'adh&eacute;rents :</th>
            <td>{{ nAdherents }}</td>
            {% if is_granted('ROLE_CREATE_COMPET') %}
            <td><a href="#" title="&Eacute;diter"><i class="fa fa-fw fa-edit"></i></a></td>
            {% endif %}
        </tr>
        <tr>
            <th>Emplacement du club :</th>
            <td>{{ club.idLieu.adresse }}</td>
            {% if is_granted('ROLE_CREATE_COMPET') %}
            <td><a href="{{ path('set_club_location', {clubId: club.id}) }}" title="&Eacute;diter"><i class="fa fa-fw fa-edit"></i></a></td>
            {% endif %}
        </tr>
    </table>
{% endblock %}